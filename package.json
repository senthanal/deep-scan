{
  "name": "@senthanal/deep-scan",
  "version": "0.0.1",
  "description": "Deep scan for the FOSS compliance of a npm package",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "name": "Senthanal Sirpi Manohar",
    "email": "senthanal@gmail.com"
  },
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "version": "changeset version",
    "publish-packages": "changeset publish",
    "start:cli": "bunx run --hot src/scan-cli/index.ts",
    "start": "bunx run --hot src/scan-app/index.tsx",
    "test:dev": "bunx test --watch",
    "test:cli": "bunx test"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "hono": "4.6.19",
    "ora": "^8.1.1",
    "yaml": "^2.7.0",
    "yoctocolors": "^2.1.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@types/bun": "^1.2.1",
    "@types/node": "^22.12.0",
    "bun": "^1.2.1",
    "esbuild": "^0.24.2",
    "esbuild-node-externals": "^1.16.0",
    "size-limit": "^11.1.6",
    "type-fest": "^4.30.2",
    "typed-htmx": "^0.3.1",
    "typescript": "^5.7.2"
  }
}
